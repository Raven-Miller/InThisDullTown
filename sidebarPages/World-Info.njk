<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>World Info</title>
    <link rel="stylesheet" href="{{ '/styles/style.css' | url }}" />
    <script src="{{ '/elements/elements.js' | url }}" defer></script>
    <link
      rel="icon"
      href="{{ '/Images/favicon.png' | url }}"
      type="image/x-icon"
    />
  </head>
  <body>
    <main>
      <div id="siteHeaderPlaceholder"></div>

      <div class="meat">
        <section class="mtc">
          <h2>Meet the Characters</h2>
          <nav class="characters">

          <div class="characters" href="{{ story.url | url }}">
            {% for story in collections.MTC %}
            <div class="characters">
                <a href="{{ story.url | url }}" class="story-card noStyle">
                  <h3>{{ story.data.title }}</h3>
                  <p>{{ story.data.description }}</p>
                </a>
            </div>
            {% endfor %} 
          </div>

          </nav>
        </section>
        <section class="setting">
          <h2>Setting</h2>
          <div class="setting">
            <p>Total stories: {{ collections.Setting | length }}</p>
          <div class="settingBits" href="{{ story.url | url }}">
            {% for story in collections.Setting %}
            <div class="storyGrid">
                <a href="{{ story.url | url }}" class="story-card noStyle">
                  <h3>{{ story.data.title }}</h3>
                  <p>{{ story.data.description }}</p>
                </a>
            </div>
            {% endfor %} 
          </div>
          </div>
        </section>
      </div>

      <div id="footerPlaceholder"></div>
    </main>
    <div id="sidebarPlaceholder"></div>
  </body>
</html>
